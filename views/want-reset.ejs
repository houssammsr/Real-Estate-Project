<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Real Estate | I Want Reset</title>
    <%- include('./layouts/imports.ejs') %>
</head>
<body>
    <%- include('./layouts/navbar.ejs') %>
    
    <% if(email === undefined){ %>
        <div class="container-md d-flex justify-content-center align-items-center forgot-div">
            <div class="py-5">
                <h1 class="text-center">Forgot Password</h1>
                <p class="text-muted text-center fs-5">Enter your email address to reset your password.</p>
                <form action="/accounts/want-reset" method="POST">
                    <div class="input-group mb-3">
                        <span class="input-group-text bg-danger text-white">
                        <i class="fa-solid fa-envelope"></i>
                        </span>
                        <div class="form-floating">
                            <input
                                type="email"
                                class="form-control"
                                name="email"
                                placeholder="Email"
                                required
                            />
                            <label for="email">Email</label>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-danger form-control">Send</button>
                </form>
            </div>
        </div>
    <% }else{ %>
        <div class="container-md d-flex justify-content-center align-items-center forgot-div">
            <div class="py-5 text-center">
                <h1>We sent you an email</h1>
                <p class="text-muted fs-5">You can reset your email or password by clicking the link in the email.</p>
            </div>
        </div>
    <% } %>

    <%- include('./layouts/footer.ejs') %>
</body>
</html>